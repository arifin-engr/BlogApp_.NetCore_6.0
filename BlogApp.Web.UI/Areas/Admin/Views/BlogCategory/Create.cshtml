@model BlogCategoryVM
@{
   ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Category</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="CategoryTitle"></label>
			<input asp-for="CategoryTitle" class="form-control" />
			<span asp-validation-for="CategoryTitle" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="CategoryDescription"></label>
			<input asp-for="CategoryDescription" class="form-control" />
			<span asp-validation-for="CategoryDescription" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
		<a asp-area="Admin" asp-controller="BlogCategories" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}